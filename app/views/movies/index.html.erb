<html>
  <head>
    <title>Movie Index</title>
  </head>
  <body>
    <h1>Index</h1>
    <% @movies = Movie.all %>
    <% @movies.each do |movie| %>
        <p><%= movie.title %>, réalisé par <%= movie.director.first_name + " " + movie.director.last_name %>, sorti en <%= movie.release_year %></p>
    <% end %>
  </body>
</html>